  <name>Weather</name>
  <summary>Show weather conditions and forecast</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-2.0-or-later and CC-BY-3.0 and CC-BY-SA-3.0</project_license>
  <kudos>
